<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:padding="8dp">

    <TextView
        android:id="@+id/titleMeal_textView"
        style="@style/header_three"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.138"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewWeekPlanRow1"
        app:layout_constraintVertical_bias="0.19" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewWeekPlanRow1"
        android:layout_width="180dp"
        android:layout_height="160dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="6dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.177">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/meal_imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/breakfast"
            app:riv_corner_radius_top_left="16dp"
            app:riv_corner_radius_top_right="16dip" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewWeekPlanRow2"
        android:layout_width="180dp"
        android:layout_height="160dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="6dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardViewWeekPlanRow1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.177">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/meal_imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/breakfast"
            app:riv_corner_radius_top_left="16dp"
            app:riv_corner_radius_top_right="16dip" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/titleMeal_textView2"
        style="@style/header_three"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewWeekPlanRow2"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
