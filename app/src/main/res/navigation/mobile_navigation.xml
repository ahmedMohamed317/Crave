<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/homeFragment">


    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.craveapplication.home.view.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_mealsInfo"
            app:destination="@id/mealsInfo" />
    </fragment>
    <fragment
        android:id="@+id/mealsInfo"
        android:name="com.example.craveapplication.mealDetails.view.MealsInfo"
        android:label="fragment_meals_info"
        tools:layout="@layout/fragment_meals_info" />
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.craveapplication.favourite.view.FavoriteFragment"
        android:label="fragment_favorite"
        tools:layout="@layout/fragment_favorite" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.craveapplication.search.view.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.craveapplication.searchByMeal.view.SearchByMealFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_search_by_meal" />
</navigation>